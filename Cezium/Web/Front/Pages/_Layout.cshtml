@namespace Cezium.Web.Front.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="~/"/>
    
    <link rel="stylesheet" href="~/Web/Front/Assets/Font/Font.css">
    <link rel="stylesheet" href="~/Web/Front/Assets/css/Background.css">
    <link rel="stylesheet" href="~/Web/Front/Assets/css/Global/Layout.css">
    <script src="~/Web/Front/Assets/Js/Global/Layout.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    @await RenderSectionAsync("Head", false)
</head>

<body style="margin: 0; padding: 0">
<div id="side-navbar" class="side-nav">
    <div onclick="openNav()" class="fugaz-one-font hamburger-nav-button noselect">
        <img src="~/Web/Front/Assets/Images/hamburger-menu-48.png" class="side-nav-condensed-icon" alt="Dashboard">
        
        <div id="hamburger-nav-button-text" class="fugaz-one-font hamburger-nav-button-text" style="margin-top: -4px">
            CEZIUM
        </div>
    </div>

    <div id="side-nav-condensed" class="side-nav-condensed noselect">
        <a href="/">
            <img src="~/Web/Front/Assets/Images/Home-button-white-48.png" class="side-nav-condensed-icon" alt="Dashboard">
        </a>
        <a href="/Rust">
            <img src="~/Web/Front/Assets/Images/AssaultRifle-48.png" class="side-nav-condensed-icon" alt="Rust">
        </a>

        <div class="side-nav-condensed-bottom fugaz-one-font">
            V1
        </div>
    </div>

    <div id="side-nav-expanded-content" class="side-nav-expanded-content noselect">
        <div>
            <a href="/">
                <img src="~/Web/Front/Assets/Images/Home-button-white-48.png" class="side-nav-expanded-icon" alt="Dashboard">
                - Dashboard
            </a>
        </div>
        <div>
            <a href="/Rust">
                <img src="~/Web/Front/Assets/Images/AssaultRifle-48.png" class="side-nav-expanded-icon" alt="Rust">
                - Rust
            </a>
        </div>

        <div class="side-nav-expanded-content-bottom fugaz-one-font">
            VERSION 1.0
        </div>
    </div>
</div>

<section id="main">
    @RenderBody()
</section>

</body>

</html>